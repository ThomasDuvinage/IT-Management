<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="199.0" prefWidth="521.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HBox prefHeight="294.0" prefWidth="390.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_RIGHT" prefHeight="294.0" prefWidth="170.0" spacing="20.0">
               <children>
                  <Label text="Ancient mot de passe :" />
                  <Label text="Nouveau mot de passe :" />
                  <Label text="Confirmez le mot de passe :" />
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="294.0" prefWidth="235.0" spacing="12.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
               <children>
                  <TextField fx:id="f_old_password" />
                  <PasswordField fx:id="f_new_password" />
                  <PasswordField fx:id="f_password_confirm" />
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="61.0" prefWidth="390.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="b_ok" mnemonicParsing="false" onAction="#validate" prefHeight="25.0" prefWidth="100.0" text="OK" />
            <Button fx:id="b_cancel" mnemonicParsing="false" onAction="#quit" prefHeight="25.0" prefWidth="100.0" text="Annuler" />
         </children>
      </HBox>
   </bottom>
</BorderPane>